{
  "title": "ForecastRequest",
  "type": "object",
  "properties": {
    "job_id": { "type": "string", "format": "uuid" },
    "parameters": {
      "type": "object",
      "properties": {
        "periods": { "type": "integer", "default": 30 },
        "freq": { "type": "string", "default": "D" }
      }
    },
    "columns": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["ds", "y"]
    },
    "data": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "anyOf": [{ "type": "string" }, { "type": "number" }]
        },
        "minItems": 2,
        "maxItems": 2
      },
      "description": "Lista de listas otimizada: [['2023-01-01', 100], ...]"
    }
  },
  "required": ["job_id", "data"]
}
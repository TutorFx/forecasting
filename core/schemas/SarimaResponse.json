{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SarimaResponse",
  "type": "object",
  "required": [
    "job_id",
    "status",
    "columns",
    "data"
  ],
  "properties": {
    "job_id": {
      "type": "string",
      "description": "Identificador único do job (UUID) vinculado à requisição original"
    },
    "status": {
      "type": "string",
      "description": "Status do processamento",
      "enum": [
        "SUCCESS",
        "FAILED"
      ]
    },
    "message": {
      "type": "string",
      "description": "Mensagem detalhada em caso de erro ou avisos de convergência"
    },
    "metrics": {
      "type": "object",
      "description": "Métricas de ajuste do modelo SARIMA",
      "properties": {
        "mae": {
          "type": "number",
          "description": "Mean Absolute Error"
        },
        "rmse": {
          "type": "number",
          "description": "Root Mean Squared Error"
        },
        "mape": {
          "type": "number",
          "description": "Mean Absolute Percentage Error"
        }
      }
    },
    "columns": {
      "type": "array",
      "description": "Lista das colunas retornadas no array de dados",
      "items": {
        "type": "string"
      },
      "default": [
        "ds",
        "yhat",
        "yhat_lower",
        "yhat_upper"
      ]
    },
    "data": {
      "type": "array",
      "description": "Lista de previsões geradas",
      "items": {
        "type": "object",
        "required": [
          "ds",
          "yhat"
        ],
        "properties": {
          "ds": {
            "type": "string",
            "description": "Datestamp do período previsto"
          },
          "yhat": {
            "type": "number",
            "description": "Valor central previsto (Point Forecast)"
          },
          "yhat_lower": {
            "type": "number",
            "description": "Limite inferior do intervalo de confiança"
          },
          "yhat_upper": {
            "type": "number",
              "description": "Limite superior do intervalo de confiança"
            }
        }
      }
    }
  }
}